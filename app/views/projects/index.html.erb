<h1>Portfolio <small><%=  link_to('New Project', new_project_path) if can? :edit, @featured_projects %></small></h1>

<% if @featured_projects.present? %>
  <h3>Featured Projects</h3>
  <% @featured_projects.each do |project| %>
  <h2>
    <%= project.title %> <small> | <a href="<%= "http://#{project.url}" %>" target='_blank'><%= project.url %></a></small>
  </h2>
    <%= render :partial => 'project_details', :locals => { :project => project } %>
  <% end %>
<% end %>

<% if @ror_projects.present? %>
  <h3>Ruby on Rails</h3>
  <% @ror_projects.each do |project| %>
      <%= render :partial => 'thumbnail', :locals => { :project => project } %>
      <%= cycle('','<div class="clear"></div>').html_safe %>
  <% end %>
  <div class="clear"></div>
  <% reset_cycle %>
<% end %>


<h1>Portfolio</h1>
<% @projects.each do |project| %>
    <div class="span-8">
      <div class="boxgrid captionfull">
        <%= link_to((image_tag "#{project.image}_270px.png"), project_path(project)) %>
        <div class="cover boxcaption">
          <h3><%= project.title %></h3>
          <p>
            <%= link_to project.url, project_path(project) %><br>
            <%= link_to 'more information', project_path(project) %>
          <% if can? :edit, project %>
             <br> <%= link_to 'edit', edit_project_path(project) %>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <%= cycle('','<div class="clear"></div>') %>
<% end %>
